<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.google.gpsarglass">

    <!-- Permissions réseau et GPS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Compatible Google Glass -->
    <uses-feature
        android:name="android.hardware.type.glass"
        android:required="true" />

    <!-- Forcer compatibilité SDK + override AppCompat -->
    <uses-sdk
       tools:overrideLibrary="android.support.v7.appcompat,android.support.v4" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Lancement principal -->
        <activity
            android:name=".MapsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Street View -->
        <activity
            android:name=".StreetViewActivity"
            android:label="Street View"
            android:exported="true" />

        <!-- Clé API (chargée depuis res/values/google_maps_api.xml) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>
</manifest>