<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ThÃ¨me principal de l'application (Holo pur, pas AppCompat) -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Couleurs de base -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Variante sombre -->
    <style name="AppTheme.Dark" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style des boutons -->
    <style name="AppButton" parent="android:Widget.Holo.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Style pour le texte principal -->
    <style name="AppText" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style pour les titres -->
    <style name="AppTitle" parent="android:TextAppearance.Holo.Large">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
